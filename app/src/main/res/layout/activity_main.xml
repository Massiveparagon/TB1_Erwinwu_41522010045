<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- HorizontalScrollView untuk scroll gambar -->
            <HorizontalScrollView
                android:id="@+id/horizontalmeun"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/vektor1"
                android:layout_marginTop="-50dp"
                android:background="@drawable/bggunung">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="303dp"
                        android:layout_height="180dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="60dp"
                        android:src="@drawable/gambar1">
                    </ImageView>

                    <ImageView
                        android:layout_width="303dp"
                        android:layout_height="180dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="60dp"
                        android:src="@drawable/gambar2" />


                    <ImageView
                        android:layout_width="303dp"
                        android:layout_height="180dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="60dp"
                        android:src="@drawable/gambar3">
                    </ImageView>

                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/vektor1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/vektor"></ImageView>

            <ImageView
                android:id="@+id/vektor2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/vector19"></ImageView>



            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/touch"></ImageView>

            <ImageView
                android:id="@+id/muka"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/olivia" />

            <TextView
                android:id="@+id/textAtas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="50dp"
                android:layout_toEndOf="@id/muka"
                android:fontFamily="@font/montserratregular"
                android:text="Selamat Pagi"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/texttengah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textAtas"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/muka"
                android:fontFamily="@font/montserratsemibold"
                android:text="Olivia Gabrielle"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textbawah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/texttengah"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/muka"
                android:fontFamily="@font/montserratlight"
                android:text="olivia.gabrielle@gmail.com"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <ImageView
                android:id="@+id/touch2"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:layout_below="@+id/vektor3"
                android:layout_marginStart="360dp"
                android:layout_marginTop="-20dp"
                android:background="@drawable/touch2"></ImageView>

            <ImageView
                android:id="@+id/vektor3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/vector12"></ImageView>

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="130dp"
                android:layout_marginTop="75dp"
                android:background="@android:color/transparent">

                <ImageButton
                    android:id="@+id/buttonDrawerToggle"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/menu"
                    android:layout_gravity="end"
                    android:contentDescription="TODO">
                </ImageButton>
            </androidx.appcompat.widget.Toolbar>


            <ImageView
                android:id="@+id/cewek"
                android:layout_width="368dp"
                android:layout_height="258dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_below="@id/horizontalmeun"
                android:background="@drawable/gambar_cewek">
            </ImageView>
            
            <TextView
                android:id="@+id/Vaganza"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/cewek"
                android:layout_marginStart="25dp"
                android:text="Vaganza Fiesta"
                android:fontFamily="@font/montserratregular"
                android:textStyle="bold"
                android:textSize="18sp">
            </TextView>
            
            <ImageView
                android:id="@+id/diskonhotel"
                android:layout_width="175dp"
                android:layout_height="211dp"
                android:layout_below="@+id/Vaganza"
                android:background="@drawable/diskon70hotel"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp">
            </ImageView>

            <ImageView
                android:layout_width="175dp"
                android:layout_height="211dp"
                android:layout_below="@+id/Vaganza"
                android:layout_toEndOf="@id/diskonhotel"
                android:background="@drawable/cashbackshoppepay"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp">
            </ImageView>

            <ImageView
                android:id="@+id/foodvoucher"
                android:layout_width="175dp"
                android:layout_height="211dp"
                android:layout_below="@+id/diskonhotel"
                android:background="@drawable/foodvoucher"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp">
            </ImageView>

            <ImageView
                android:id="@+id/vouchergofood"
                android:layout_width="175dp"
                android:layout_height="211dp"
                android:layout_toEndOf="@id/diskonhotel"
                android:layout_below="@+id/diskonhotel"
                android:background="@drawable/vouchergofood"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp">
            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/vouchergofood"
                android:background="@drawable/kotakbawah">
            </ImageView>

            <ImageView
                android:id="@+id/vektornyebelin"
                android:layout_width="200dp"
                android:layout_height="225dp"
                android:layout_below="@id/diskonhotel"
                android:layout_marginStart="-3dp"
                android:layout_marginVertical="120dp"
                android:background="@drawable/vector20">
            </ImageView>

            <TextView
                android:id="@+id/hadiahmenarik"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_below="@id/foodvoucher"
                android:layout_marginTop="50dp"
                android:layout_marginStart="31dp"
                android:text="Hadiah Menarik"
                android:textColor="@color/white"
                android:fontFamily="@font/montserratsemibold">
            </TextView>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginTop="80dp"
                android:layout_marginStart="115dp"
                android:layout_below="@id/vouchergofood"
                android:background="@drawable/vector21">
            </ImageView>
            
            <ImageView
                android:layout_width="368dp"
                android:layout_height="122dp"
                android:layout_below="@id/hadiahmenarik"
                android:background="@drawable/suprisegift"
                android:layout_marginStart="31dp">
            </ImageView>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
